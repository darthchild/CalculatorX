<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintLeft_toLeftOf="parent"
    tools:context=".MainActivity">


<!--    app:layout_constraintBottom_toBottomOf="parent"-->
<!--    app:layout_constraintEnd_toEndOf="parent"-->
<!--    app:layout_constraintHorizontal_bias="0.352"-->
<!--    app:layout_constraintStart_toStartOf="parent"-->
<!--    app:layout_constraintTop_toTopOf="parent"-->
<!--    app:layout_constraintVertical_bias="0.214"-->

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="376dp"
        android:layout_height="83dp"
        android:layout_marginTop="176dp"
        android:gravity="right"
        android:text="0"
        android:textSize="60sp"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/numColor"
        android:onClick="onDigit"
        android:text="3"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/button2"
        app:layout_constraintTop_toTopOf="@id/button2" />

    <Button
        android:id="@+id/button5"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/numColor"
        android:onClick="onDigit"
        android:text="5"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/button4"
        app:layout_constraintTop_toTopOf="@id/button4"
        tools:ignore="UsingOnClickInXml" />

    <Button
        android:id="@+id/buttonEquals"
        android:layout_width="378dp"
        android:layout_height="90dp"
        android:onClick="onEqual"
        android:text="="
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button0"
        app:layout_constraintVertical_bias="0.017"
        tools:ignore="UsingOnClickInXml" />

    <Button
        android:id="@+id/button8"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginLeft="4dp"
        android:backgroundTint="@color/numColor"
        android:onClick="onDigit"
        android:text="8"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/button7"
        app:layout_constraintTop_toTopOf="@id/button7" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/numColor"
        android:onClick="onClear"
        android:text="CLR"
        android:textSize="27.4sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/button0"
        app:layout_constraintTop_toTopOf="@id/button0" />

    <Button
        android:id="@+id/button0"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/numColor"
        android:onClick="onDigit"
        android:text="0"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/buttonDecimal"
        app:layout_constraintTop_toTopOf="@id/buttonDecimal"
        tools:ignore="UsingOnClickInXml" />

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/numColor"
        android:onClick="onDigit"
        android:text="2"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/button1"
        app:layout_constraintTop_toTopOf="@id/button1" />

    <Button
        android:id="@+id/button9"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginLeft="8dp"
        android:backgroundTint="@color/numColor"
        android:onClick="onDigit"
        android:text="9"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/button8"
        app:layout_constraintTop_toTopOf="@id/button8" />

    <Button
        android:id="@+id/button6"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/numColor"
        android:onClick="onDigit"
        android:text="6"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/button5"
        app:layout_constraintTop_toTopOf="@id/button5"
        tools:ignore="UsingOnClickInXml" />

    <Button
        android:id="@+id/button7"
        android:onClick="onDigit"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginLeft="6dp"
        android:text="7"
        android:backgroundTint="@color/numColor"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvInput" />

    <Button
        android:id="@+id/buttonDivide"
        android:onClick="onOperator"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginLeft="6dp"
        android:text="รท"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/button9"
        app:layout_constraintTop_toTopOf="@id/button9" />

    <Button
        android:id="@+id/button4"
        android:onClick="onDigit"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:backgroundTint="@color/numColor"
        android:text="4"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/button7"
        app:layout_constraintTop_toBottomOf="@id/button7" />

    <Button
        android:id="@+id/buttonMultiply"
        android:onClick="onOperator"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginLeft="6dp"
        android:text="ร"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/button6"
        app:layout_constraintTop_toTopOf="@id/button6" />

    <Button
        android:id="@+id/button1"
        android:onClick="onDigit"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:backgroundTint="@color/numColor"
        android:text="1"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/button4"
        app:layout_constraintTop_toBottomOf="@id/button4" />


    <Button
        android:id="@+id/buttonSubtract"
        android:onClick="onOperator"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginLeft="6dp"
        android:text="-"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/button3"
        app:layout_constraintTop_toTopOf="@id/button3" />

    <Button
        android:id="@+id/buttonDecimal"
        android:onClick="onDecimal"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:backgroundTint="@color/numColor"
        android:text="."
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@id/button1" />

    <Button
        android:id="@+id/buttonAdd"
        android:onClick="onOperator"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginLeft="6dp"
        android:text="+"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/buttonClear"
        app:layout_constraintTop_toTopOf="@id/buttonClear" />


</androidx.constraintlayout.widget.ConstraintLayout>